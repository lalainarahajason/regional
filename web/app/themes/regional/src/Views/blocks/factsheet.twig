
{% if factsheets|length > 0 %}
    <div class="alignfull bg-blue-dark py-10 px-14 ">
    <div class="container mx-auto">
        <div class="swiper-container factsheetSlider">
            <!-- Additional required wrapper -->
            <div class="swiper-wrapper">

                {% for factsheet in factsheets %}
                    <div data-link="{{ factsheet.document.url }}" class="download bg-blue-light bg-opacity-10 hover:bg-blue hover:bg-opacity-1 swiper-slide flex flex-wrap h-72 w-60 relative" role="button">

                        <div class="h-2/4 overflow-hidden w-full">
                            <img src="{{ factsheet.thumbnail.sizes['factsheet-thumbnail'] }}" alt="{{ factsheet.title }}" class="w-full">
                        </div>
                        <div class="w-full h-2/4 self-end py-10 px-5 relative">
                            <div class="text-white text-lg text-center">{{ factsheet.title }}</div>
                            <div class="absolute file-icon bg-blue flex items-center justify-center w-full h-full top-0 left-0 opacity-0 group-hover:opacity-1">
                                <div class="text-white">
                                    <div class="text-xs text-center pb-3">Download</div>
                                    <div class="w-8 mx-auto pt-3">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
                                        </svg>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- If we need navigation buttons -->
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
        </div>
    </div>
</div>
{% endif %}
