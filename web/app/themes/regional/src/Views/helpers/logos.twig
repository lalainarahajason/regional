<div class="w-1/12 pt-5">
    <div class="flex flex-col px-4 justify-center">
        {% for index,logo in options.logos.main %}
            <a href="#" class="block {% if index == 0 %} mb-5 {% endif %}">
                <img src="{{ logo.url }}" class="mx-auto">
            </a>
        {% endfor %}
    </div>
</div>
<div class="w-2/12 bg-blue relative z-50">
    <div class="md:absolute top-0 secondary-logos">
        <a href="{{ site.link }}" class="md:-right-10 block">
            <img src="{{ options.logos.secondary.url }}" class="mx-auto">
        </a>
        <a href="{{ site.link }}" class="md:mt-10 block">
            <img src="{{ options.logos.eu_regional_logo.url }}" class="mx-auto">
        </a>
    </div>


</div>